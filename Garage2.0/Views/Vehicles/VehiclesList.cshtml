@model Garage2._0.Models.ViewModels.VehicleListViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-secondary my-4">Vehicles in Garage</h1>

<p>
    <a asp-action="CheckIn" class="btn btn-success my-5"> Check In</a>
</p>

<form asp-action="Filter" method="get">
    <div class="input-group my-5">
        <input type="text" class="form-control" placeholder="Search on registration number" asp-for="RegisterNumber" />
        <input type="text" class="form-control" placeholder="Search on color" asp-for="Color" list="colors" />
        <input type="text" class="form-control" placeholder="Search on brand" asp-for="Brand" list="brands" />
        <datalist id="colors">   @* from an example *@
            @foreach (var color in ViewData["Colors"] as List<string>)
            {
                <option value="@color"></option>
            }
        </datalist>
        <datalist id="brands">
            @foreach (var brand in ViewData["Brands"] as List<string>)
            {
                <option value="@brand"></option>
            }
        </datalist>
        <div class="input-group-append">
            <select class="form-control" asp-for="VehicleType" asp-items="@Model.VehicleTypes">
                <option selected="selected" value="">Please select</option>
            </select>
        </div>
        <div class="input-group-append">
            <button type="submit" class="btn btn-secondary">Search</button>
        </div>
    </div>
</form>

 <partial name="_VehicleListPartial" model="@Model.Vehicles" /> 

