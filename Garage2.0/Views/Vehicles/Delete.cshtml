@model Garage2._0.Models.Entites.Vehicle
@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex flex-column align-items-center align-items-center">
    <h1 class="text-center text-secondary my-4">Delete Vehicle From Database </h1>

    <h5 class="text-center text-primary my-4">Are you sure you want to delete this vehicle?</h5>
    <div>
        <hr class="my-4" />
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RegisterNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RegisterNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Brand)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Brand)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VehicleType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VehicleType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Color)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Color)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ArrivalTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ArrivalTime)
            </dd>

        </dl>

        <form asp-action="Confirm">
            <a asp-action="VehiclesList" class="me-3">Back to List</a>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirm Delete" class="btn btn-danger" />
        </form>
    </div>
</div>

