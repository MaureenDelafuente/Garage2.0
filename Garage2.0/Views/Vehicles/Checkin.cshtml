@model Garage2._0.Models.ViewModels.VehicleCheckinViewModel
@{
    ViewData["Title"] = "Check in";
}


<div class="d-flex flex-column align-items-center">
    <h1 class="text-center text-secondary my-4">Check in</h1>

    <div>
        <hr class="my-4" />
        <div class="row justify-content-center">
            <div style="width:20vw">
                <form asp-action="CheckIn" style="width: 100%">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group my-3">
                        <label asp-for="RegisterNumber" class="control-label"></label>
                        <input asp-for="RegisterNumber" class="form-control" />
                        <span asp-validation-for="RegisterNumber" class="text-danger"></span>
                    </div>

                    <div class="input-group-append my-3">
                        <label asp-for="VehicleType" class="control-label"></label>
                        <select class="form-control" asp-for="VehicleType" asp-items="@Model.VehicleTypes">
                            <option selected="selected" value="">Please select</option>
                        </select>
                    </div>

                    <div class="form-group my-3">
                        <label asp-for="Color" class="control-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="form-group my-3">
                        <label asp-for="Brand" class="control-label"></label>
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>

                    <div class="form-group my-3">
                        <label asp-for="Model" class="control-label"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>

                    <div class="form-group my-3">
                        <label asp-for="NumberOfWheels" class="control-label"></label>
                        <input asp-for="NumberOfWheels" class="form-control" min="1" type="number" />
                        <span asp-validation-for="NumberOfWheels" class="text-danger"></span>
                    </div>

                    <div class="form-group my-5">
                        <a asp-action="VehiclesList" class="me-3">Back to List</a>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
