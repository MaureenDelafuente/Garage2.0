@model Garage2._0.Models.Entites.Feedback

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex flex-column align-items-center align-items-center">
    <h1 class="text-center text-secondary my-4">Delete Feedback </h1>

    <h5 class="text-center text-primary my-4">Are you sure you want to delete feedback?</h5>
    <div>
        <hr class="my-4" />

        <dl class="row">
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Rating)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.FeedbackMessage)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.FeedbackMessage)
            </dd>
        </dl>

        <form asp-action="Delete">
            <a class="pe-3" asp-action="Index">Back to All Feedbacks</a>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            
        </form>
    </div>
</div>
